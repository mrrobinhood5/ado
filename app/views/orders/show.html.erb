<h1> <%= @order.docnum %></h1>
<h4> <%= @order.status %></h4>
<table class='table'>
    <tr>
        <th>NSN</th>
        <th>Nomenclature</th>
    </tr>
    <% @order.items.each do |i| %>
    <tr>
        <td><%= i.nsn %></td>
        <td><%= i.nomen %></td>
        <td><%= link_to "Remove", [@order,i], method: :delete, data: { confirm: 'Ok?'} %></td>
    </tr>
    <% end %>
    </tr>    
</table>
<p>
    <%= link_to "Add Items", new_order_item_path(@order), class: 'btn btn-success' %>
</p>
<p>
    <%= link_to "Update Status", edit_order_path, class: 'btn btn-primary' %>
    <%= link_to "Go Back", orders_path, class: 'btn btn-primary' %>
</p>
<p>
    <%= link_to "Delete", @order, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
</p>
